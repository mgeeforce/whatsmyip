# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           io.adeptus.whatismyip.controllers.HomeController.index
GET		/ipify						io.adeptus.whatismyip.controllers.HomeController.ipify
GET		/post						io.adeptus.whatismyip.controllers.HomeController.post
POST	/							io.adeptus.whatismyip.controllers.HomeController.receive
GET		/whatismyip					io.adeptus.whatismyip.controllers.HomeController.whatismyip
GET		/show					io.adeptus.whatismyip.controllers.HomeController.show


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
